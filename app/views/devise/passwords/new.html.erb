<% title 'Forgot Password?' %>
<% noindex %>
<div class="container">
<div class="col-md-6 col-md-offset-3 panel panel-default margin-top-40">
  <div class="panel-body">
    <div class="section-divider">
      <h1>Forgot Password?</h1>
      <p class="sub-head">Start by entering your email address.</p>
    </div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :email, required: true, input_html: {class: "form-control input-sm"} %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
  </div>
<% end %>
    

  </div>
</div>
</div>