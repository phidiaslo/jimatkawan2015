<% title 'Open Shop' %>
<% noindex %>
<div class="container">
<div class="col-md-6 col-md-offset-3 panel panel-default margin-top-40">
  <div class="panel-body">
    <div class="section-divider">
      <h1>Open Shop</h1>
      <p class="sub-head">Create Your Shop & Start Selling.</p>
    </div>

	<%= simple_form_for(@shop) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-group">
	    <%= f.input :name, required: true, label: 'Shop Name', input_html: { class: "form-control input-sm"} %>
	  </div>
	  <div class="form-group">
	    <%= f.input :subdomain, required: true, label: 'Shop URL', input_html: { class: "form-control input-sm"} %>
	  </div>

	  <div class="form-group">
	    <%= f.button :submit, class: "btn btn-primary" %>
	  </div>
	<% end %>

<%= link_to 'Go Back', shops_path %>

</div>
</div>
</div>
